{% extends "layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "moj/components/pagination/macro.njk" import mojPagination %}

{% set pageHeaderTitle = "Search for a prisoner" %}
{% set pageTitle = applicationName + " - " + pageHeaderTitle %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>
    </div>
    {% include "partials/searchHeader.njk" %}
    <div class="govuk-grid-column-full govuk-!-padding-top-5">
    {% if results | length %}
      {% set pagination %}
        {{ mojPagination({
          results: {
            from: from,
            to: to,
            count: numberOfResults
          },
          previous: {
            text: 'Previous',
            href: '/search/results?search=' + search + '&page=' + previous
          },
          next: {
            text: 'Next',
            href: '/search/results?search=' + search + '&page=' + next
          },
          items: pageLinks
        }) }}
      {% endset %}

      {{ pagination | safe if numberOfResults > 10 }}

        {{ govukTable({
            classes: " govuk-!-margin-top-3",
            captionClasses: "govuk-table__caption--m",
            attributes: {
              "id": "search-results-true"
            },
            firstCellIsHeader: true,
            head: [
                {
                  text: "Name",
                  classes: "bapv-table_cell"
                },
                {
                  text: "Prison number",
                  classes: "bapv-table_cell"
                },
                {
                  text: "Date of birth",
                  classes: "bapv-table_cell"
                }
            ],
            rows: results
        }) }}

      {{ pagination | safe if numberOfResults > 10 }}
    {% else %}
        <p class="govuk-!-margin-top-6 govuk-!-margin-bottom-6" id="search-results-none">There are no results for this name or number at {{ establishment }}.
    {% endif %}
    </div>
  </div>
{% endblock %}
