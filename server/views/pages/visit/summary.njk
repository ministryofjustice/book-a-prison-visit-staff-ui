{% extends "layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageHeaderTitle = "Booking details" %}
{% set pageTitle = applicationName + pageHeaderTitle + " - " + visit.reference %}
{% set backLinkHref = "/prisoner/visits/" + visit.prisonNumber %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <p>Booking reference: <span data-test="reference">{{ visit.reference }}</span></p>

      <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>

      <h2 class="govuk-heading-m">Prisoner details</h2>
      <pre>
        Name: {{ (prisoner.firstName + ' ' + prisoner.lastName) | formatMainContact }}
        Prison number: {{ prisoner.prisonerNumber }}
        DoB: {{ prisoner.dateOfBirth }}
        Location: {{ prisoner.cellLocation }}, {{ prisoner.locationDescription }}
      </pre>

      <h2 class="govuk-heading-m">Visit details</h2>
      <pre>{{ visit | dump(2) }}</pre>

      <h2 class="govuk-heading-m">Visitor details</h2>
      <pre>{{ visitors | dump(2) }}</pre>

    </div>
  </div>
{% endblock %}
