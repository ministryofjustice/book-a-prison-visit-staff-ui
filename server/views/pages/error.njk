{% extends "layout.njk" %}

{% set pageHeaderTitle = "Error" %}
{% set pageTitle %}
{{ applicationName }} - {{ pageHeaderTitle }}
{% endset %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>
      <h2 class="govuk-heading-m">{{ status }}</h2>
      <p>{{ message }}</p>
      {% if stack %}
      <pre>{{ stack }}</pre>
      {% endif %}
    </div>
</div>

{% endblock %}
