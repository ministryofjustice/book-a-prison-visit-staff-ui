{% extends "layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{%- from "moj/components/side-navigation/macro.njk" import mojSideNavigation -%}
{% from "moj/components/pagination/macro.njk" import mojPagination %}
{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}

{% set pageHeaderTitle = "View visits by date" %}
{% set pageTitle = applicationName + " - " + pageHeaderTitle %}
{% set backLinkHref = "/" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      {{ mojSubNavigation({
        items: dateTabs
      }) }}
    </div>
    <div class="govuk-grid-column-one-quarter">
      <div class="moj-sub-navigation__list">
        <div class="moj-sub-navigation" id="" aria-label="Date picker">
          <div class="govuk-button-group moj-js-hidden">
            {{ govukDateInput({
              id: "date-picker",
              namePrefix: "date-picker",
              hint: {
                text: "Enter a date"
              }
            }) }}
            {{ govukButton({
              text: "View",
              attributes: {
                'aria-haspopup': true,
                'aria-expanded': false
              }
            }) }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="govuk-grid-row">
    {% if results | length %}
      <div class="govuk-grid-column-one-quarter">
        {{ mojSideNavigation({
        label: 'Slots navigation',
        classes: 'govuk-!-padding-top-0',
        sections: slotsNav
        }) }}

      <h3 class="govuk-heading-s">Visitor list</h3>
      <div class="govuk-button-group">
        {{ govukButton({
            text: "Download CSV"
        }) }}
        {{ govukButton({
            text: "Print",
            classes: "govuk-button--secondary"
        }) }}
      </div>

      <h3 class="govuk-heading-s">Prisoner list</h3>
      <div class="govuk-button-group">
        {{ govukButton({
            text: "Download CSV"
        }) }}
        {{ govukButton({
            text: "Print",
            classes: "govuk-button--secondary"
        }) }}
      </div>
    </div>

    <div class="govuk-grid-column-three-quarters">
      <h2 class="govuk-heading-m"><span data-test="visit-room">{% if visitType == 'OPEN' %}Main{% else %}Closed{% endif %}</span> visits room, <span data-test="visit-time">{{ slotTime }}</span></h2>
      <p><span data-test="visit-tables-booked">{{ numberOfResults }} of {{ maxSlots }}</span> tables booked</p>
      <p><span data-test="visit-visitors-total">{{ totals.visitors }}</span> visitors in total (<span data-test="visit-adults">{{ totals.adults }}</span> adult{% if totals.adults != 1 %}s{% endif %} and <span data-test="visit-children">{{ totals.children }}</span> child{% if (totals.children != 1) %}ren{% endif %})</p>
        {% set pagination %}
          {{ mojPagination({
            results: {
              from: from,
              to: to,
              count: numberOfResults
            },
            previous: {
              text: 'Previous',
              href: backLinkHref + '?' + queryParams + '&page=' + previous
            } if numberOfResults > 10,
            next: {
              text: 'Next',
              href: backLinkHref + '?' + queryParams + '&page=' + next
            } if numberOfResults > 10,
            items: pageLinks if numberOfResults > 10
          }) }}
        {% endset %}
        {{ pagination | safe }}
        {{ govukTable({
          classes: "bapv-table govuk-!-margin-top-3",
          head: [
              {
                text: "Prisoner name"
              },
              {
                text: "Prison number"
              },
              {
                text: "Action",
                classes: "govuk-!-text-align-right"
              }
          ],
          rows: results
        }) }}
        {{ pagination | safe }}
      </div>
    {% else %}
      <div class="govuk-grid-column-full">
        <p class="govuk-!-margin-top-6 govuk-!-margin-bottom-6" id="search-results-none">No visit sessions on this day.</p>
      </div>
    {% endif %}
  </div>
{% endblock %}

{% block pageScripts %}
  <script src="/assets/viewVisitsDatePicker.js"></script>
{% endblock %}

