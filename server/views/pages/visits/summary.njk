{% extends "layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{%- from "moj/components/side-navigation/macro.njk" import mojSideNavigation -%}
{% from "moj/components/pagination/macro.njk" import mojPagination %}
{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}

{% set pageHeaderTitle = "View visits by date" %}
{% set pageTitle = applicationName + " - " + pageHeaderTitle %}
{% set backLinkHref = "/" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ pageHeaderTitle }}</h1>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <nav class="moj-sub-navigation bapv-sub-navigation" aria-label="Sub navigation">

        <ul class="moj-sub-navigation__list">
          {% for dateTab in dateTabs %}
            <li class="moj-sub-navigation__item">
              <a class="moj-sub-navigation__link" {% if dateTab.active %}aria-current="page"{% endif %} href="{{ dateTab.href }}">{{ dateTab.text }}</a>
            </li>
          {% endfor %}
        </ul>

        <div class="bapv-another-date">
          <div class="bapv-another-date__toggle">
            <button type="button" aria-haspopup="true" aria-expanded="false">View another date<svg viewBox="0 0 20 20" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="moj-search-toggle__button__icon"><path d="M7.433,12.5790048 C6.06762625,12.5808611 4.75763941,12.0392925 3.79217348,11.0738265 C2.82670755,10.1083606 2.28513891,8.79837375 2.28699522,7.433 C2.28513891,6.06762625 2.82670755,4.75763941 3.79217348,3.79217348 C4.75763941,2.82670755 6.06762625,2.28513891 7.433,2.28699522 C8.79837375,2.28513891 10.1083606,2.82670755 11.0738265,3.79217348 C12.0392925,4.75763941 12.5808611,6.06762625 12.5790048,7.433 C12.5808611,8.79837375 12.0392925,10.1083606 11.0738265,11.0738265 C10.1083606,12.0392925 8.79837375,12.5808611 7.433,12.5790048 L7.433,12.5790048 Z M14.293,12.579 L13.391,12.579 L13.071,12.269 C14.2300759,10.9245158 14.8671539,9.20813198 14.866,7.433 C14.866,3.32786745 11.5381325,-1.65045755e-15 7.433,-1.65045755e-15 C3.32786745,-1.65045755e-15 -1.65045755e-15,3.32786745 -1.65045755e-15,7.433 C-1.65045755e-15,11.5381325 3.32786745,14.866 7.433,14.866 C9.208604,14.8671159 10.9253982,14.2296624 12.27,13.07 L12.579,13.39 L12.579,14.294 L18.296,20 L20,18.296 L14.294,12.579 L14.293,12.579 Z"></path></svg></button>
          </div>
          <div class="bapv-another-date__form moj-js-hidden">
            <form action="" method="POST" novalidate>
              <input type="hidden" name="_csrf" value="{{ csrfToken }}">
              {{ govukDateInput({
                id: "date-picker",
                namePrefix: "date-picker",
                hint: {
                  text: "Enter a date"
                }
              }) }}
              {{ govukButton({
                text: "View"
              }) }}
            </form>
          </div>
        </div>
      </nav>
    </div>
  </div>
  <div class="govuk-grid-row">
    {% if results | length %}
      <div class="govuk-grid-column-one-quarter">
        {{ mojSideNavigation({
        label: 'Slots navigation',
        classes: 'govuk-!-padding-top-0',
        sections: slotsNav
        }) }}

      <h3 class="govuk-heading-s">Visitor list</h3>
      <div class="govuk-button-group">
        {{ govukButton({
            text: "Download CSV"
        }) }}
        {{ govukButton({
            text: "Print",
            classes: "govuk-button--secondary"
        }) }}
      </div>

      <h3 class="govuk-heading-s">Prisoner list</h3>
      <div class="govuk-button-group">
        {{ govukButton({
            text: "Download CSV"
        }) }}
        {{ govukButton({
            text: "Print",
            classes: "govuk-button--secondary"
        }) }}
      </div>
    </div>

    <div class="govuk-grid-column-three-quarters">
      <h2 class="govuk-heading-m"><span data-test="visit-room">{% if visitType == 'OPEN' %}Main{% else %}Closed{% endif %}</span> visits room, <span data-test="visit-time">{{ slotTime }}</span></h2>
      <p><span data-test="visit-tables-booked">{{ numberOfResults }} of {{ maxSlots }}</span> tables booked</p>
      <p><span data-test="visit-visitors-total">{{ totals.visitors }}</span> visitors in total (<span data-test="visit-adults">{{ totals.adults }}</span> adult{% if totals.adults != 1 %}s{% endif %} and <span data-test="visit-children">{{ totals.children }}</span> child{% if (totals.children != 1) %}ren{% endif %})</p>
        {% set pagination %}
          {{ mojPagination({
            results: {
              from: from,
              to: to,
              count: numberOfResults
            },
            previous: {
              text: 'Previous',
              href: backLinkHref + '?' + queryParams + '&page=' + previous
            } if numberOfResults > 10,
            next: {
              text: 'Next',
              href: backLinkHref + '?' + queryParams + '&page=' + next
            } if numberOfResults > 10,
            items: pageLinks if numberOfResults > 10
          }) }}
        {% endset %}
        {{ pagination | safe }}
        {{ govukTable({
          classes: "bapv-table govuk-!-margin-top-3",
          head: [
              {
                text: "Prisoner name"
              },
              {
                text: "Prison number"
              },
              {
                text: "Action",
                classes: "govuk-!-text-align-right"
              }
          ],
          rows: results
        }) }}
        {{ pagination | safe }}
      </div>
    {% else %}
      <div class="govuk-grid-column-full">
        <p class="govuk-!-margin-top-6 govuk-!-margin-bottom-6" id="search-results-none">No visit sessions on this day.</p>
      </div>
    {% endif %}
  </div>
{% endblock %}

{% block pageScripts %}
  <script src="/assets/viewVisitsDatePicker.js"></script>
{% endblock %}

